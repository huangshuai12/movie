<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.mvp.view.Show2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/reg1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <RadioButton
                android:id="@+id/r1"
                android:layout_width="@dimen/dp_83"
                android:button="@null"
                android:text="影院"
                android:gravity="center"
                android:background="@drawable/button4"
                android:layout_height="@dimen/dp_25" />
            <RadioButton
                android:id="@+id/r2"
                android:layout_width="@dimen/dp_83"
                android:button="@null"
                android:text="电影"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20" android:background="@drawable/button4"
                android:layout_height="@dimen/dp_25" />
        </RadioGroup>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            ></android.support.v4.view.ViewPager>
    </LinearLayout>

    <Button
        android:id="@+id/btn1"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:background="@mipmap/com_icon_back_default_xxhdpi"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30" />
</RelativeLayout>
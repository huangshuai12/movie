<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.mvp.view.RegActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="TODO" android:scaleType="centerCrop"
        android:src="@mipmap/bitmap"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_140"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_id1"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:contentDescription="TODO" android:src="@mipmap/register_icon_name_default_xxhdpi"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                <EditText
                    android:id="@+id/name_reg"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20" android:background="@android:color/transparent"
                    android:hint="昵称"

                    android:inputType="" android:textColor="#ffffff"
                    android:textColorHint="#eeeeee"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toRightOf="@+id/image_id1" />
            </android.support.constraint.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#ffffff"
                />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                >
                <ImageView
                    android:id="@+id/image_id2"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:contentDescription="TODO" android:src="@mipmap/register_icon_sex_default_xxhdpi"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <EditText
                    android:id="@+id/sex_reg"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20" android:background="@android:color/transparent"
                   android:hint="性别"
                    android:inputType="" android:textColor="#ffffff"
                    android:textColorHint="#eeeeee"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toRightOf="@+id/image_id2" />
            </android.support.constraint.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#ffffff"
                />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                >
                <ImageView
                    android:id="@+id/image_id3"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:contentDescription="TODO" android:src="@mipmap/register_icon_date_default_xxhdpi"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <EditText
                    android:id="@+id/date"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20" android:background="@android:color/transparent"
                    android:hint="出生日期"
                    android:inputType="" android:textColor="#ffffff"
                    android:textColorHint="#eeeeee"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toRightOf="@+id/image_id3" />
            </android.support.constraint.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#ffffff"
                />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                >
                <ImageView
                    android:id="@+id/image_id4"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:contentDescription="TODO" android:src="@mipmap/log_icon_phone_default_xxhdpi"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <EditText
                    android:id="@+id/phone_reg"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20" android:background="@android:color/transparent"
                    android:hint="手机号"
                    android:inputType="" android:textColor="#ffffff"
                    android:textColorHint="#eeeeee"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toRightOf="@+id/image_id4" />
            </android.support.constraint.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#ffffff"
                />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                >
                <ImageView
                    android:id="@+id/image_id5"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:contentDescription="TODO" android:src="@mipmap/register_icon_mail_default_xxhdpi"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <EditText
                    android:id="@+id/eimal_reg"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20" android:background="@android:color/transparent"
                    android:hint="邮箱"
                    android:inputType="" android:textColor="#ffffff"
                    android:textColorHint="#eeeeee"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toRightOf="@+id/image_id5" />
            </android.support.constraint.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#ffffff"
                />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                >
                <ImageView
                    android:id="@+id/image_id6"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:contentDescription="TODO" android:src="@mipmap/log_icon_lock_default_xxhdpi"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <EditText
                    android:id="@+id/password_reg"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20" android:background="@android:color/transparent"
                    android:hint="登录密码"
                    android:inputType="textPassword"
                    android:textColor="#ffffff"
                    android:textColorHint="#eeeeee"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toRightOf="@+id/image_id6" />
            </android.support.constraint.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#ffffff"
                />
            <Button
                android:id="@+id/button_reg"
                android:layout_width="@dimen/dp_280"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:text="注册"
                android:onClick="Reg"
                android:layout_marginTop="@dimen/dp_78"
                android:textColor="#ffffff"
                android:background="@drawable/buttonlogin"
                />
        </LinearLayout>

</android.support.constraint.ConstraintLayout>
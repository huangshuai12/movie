<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.mvp.view.Show2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_30"
            >
            <ImageView

                android:contentDescription="TODO" android:src="@mipmap/dw"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_16"
                android:layout_marginStart="@dimen/dp_15" android:text="北京" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <RadioButton
                android:id="@+id/rg1"
                android:layout_width="@dimen/dp_83"
                android:button="@null"
                android:text="热门电影"
                android:gravity="center"
                android:background="@drawable/button4"
                android:layout_height="@dimen/dp_25" />
            <RadioButton
                android:id="@+id/rg2"
                android:layout_width="@dimen/dp_83"
                android:button="@null"
                android:text="正在上映"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20" android:background="@drawable/button4"
                android:layout_height="@dimen/dp_25" />
            <RadioButton
                android:id="@+id/rg3"
                android:layout_width="@dimen/dp_83"
                android:layout_marginLeft="@dimen/dp_20"
                android:button="@null"
                android:text="即将上映"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_20" android:background="@drawable/button4"
                android:layout_height="@dimen/dp_25" />
        </RadioGroup>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            ></android.support.v4.view.ViewPager>
    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:background="@mipmap/com_icon_back_default_xxhdpi"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:src="@drawable/page_bei"
        android:contentDescription="TODO" android:scaleType="centerCrop"
        />
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:contentDescription="TODO" android:src="@mipmap/my_icon_remind_default_xxhdpi"
            android:layout_marginStart="@dimen/dp_24" android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_24"
            />
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_72"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_60"
                app:roundAsCircle="true"
                app:placeholderImage="@drawable/bitmap"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="冬天来了"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_142"
                />
                <Button
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_28"
                    android:text="签到"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#ffffff"
                    android:background="@drawable/buttonqian"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_170"
                    />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_30" android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_30"
            >
                <ImageView
                    android:layout_marginStart="@dimen/dp_20" android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:contentDescription="TODO" android:src="@mipmap/my_icon_messiage_default_xxhdpi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的信息"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           >
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginStart="@dimen/dp_30" android:orientation="vertical"
               android:layout_marginLeft="@dimen/dp_30"
               >
               <ImageView
                   android:id="@+id/but23"
                   android:layout_marginStart="@dimen/dp_20" android:layout_marginTop="@dimen/dp_15"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_width="@dimen/dp_24"
                   android:layout_height="@dimen/dp_24"
                   android:contentDescription="TODO" android:src="@mipmap/my_icon_attention_default_xxhdpi"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="我的关注"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginTop="@dimen/dp_10"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginStart="@dimen/dp_35" android:orientation="vertical"
               android:layout_marginLeft="@dimen/dp_35"
               >
               <ImageView
                   android:layout_marginStart="@dimen/dp_20" android:layout_marginTop="@dimen/dp_15"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_width="@dimen/dp_24"
                   android:layout_height="@dimen/dp_24"
                   android:contentDescription="TODO" android:src="@mipmap/my_icon_feedback_default_xxhdpi"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="购票记录"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginTop="@dimen/dp_10"
                   />
           </LinearLayout>

       </LinearLayout>
    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_30" android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_30"
                >
                <ImageView
                    android:layout_marginStart="@dimen/dp_20" android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:contentDescription="TODO" android:src="@mipmap/my_icon_rccord_default_xxhdpi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意见反馈"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_35" android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_35"
                >
                <ImageView
                    android:layout_marginStart="@dimen/dp_20" android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:contentDescription="TODO" android:src="@mipmap/my_icon_version_default_xxhdpi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新版本"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_35" android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_35"
                >
                <ImageView
                    android:layout_marginStart="@dimen/dp_20" android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:contentDescription="TODO" android:src="@mipmap/my_icon_remind_default_xxhdpi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

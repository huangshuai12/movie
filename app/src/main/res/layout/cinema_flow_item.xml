<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:paddingStart="@dimen/dp_20" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="@dimen/dp_20"
    >

    <RelativeLayout
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_190"
       >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simp_cinema_flow"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_190"
            app:roundedCornerRadius="@dimen/dp_8"
          />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentBottom="true"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:background="#400a33"
            android:layout_alignParentBottom="true"
             android:alpha="0.9"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/text_cinema_flow1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFF"
                android:layout_marginBottom="@dimen/dp_10"
                android:maxLength="4"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/text_cinema_flow2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:text="160分钟"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10" android:gravity="center"
                android:textColor="#FFF"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="還是"
        android:textSize="@dimen/sp_14"
        android:id="@+id/index"
        />
</LinearLayout>
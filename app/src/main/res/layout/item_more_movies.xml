<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/iten_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_123"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dp_25"
        android:paddingLeft="@dimen/dp_123" android:paddingStart="@dimen/dp_123" 
        android:paddingBottom="@dimen/dp_10"
        android:background="@mipmap/axxhdpi"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/heart"
            android:layout_width="@dimen/dp_24" android:contentDescription="TODO" 
            android:layout_height="@dimen/dp_24"
            android:layout_alignBottom="@id/item_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10" android:layout_alignParentEnd="true" android:background="@mipmap/com_icon_collection_default_xxhdpi"
            />
        <TextView
            android:id="@+id/name"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#fff"
            android:textSize="@dimen/sp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10" android:ellipsize="end"
            android:maxLines="3"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img"
        android:layout_width="@dimen/dp_103"
        android:layout_height="@dimen/dp_129"
        android:layout_marginStart="@dimen/dp_10" android:layout_marginTop="@dimen/dp_24"
        android:layout_alignBottom="@id/iten_bg"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        />
</RelativeLayout>

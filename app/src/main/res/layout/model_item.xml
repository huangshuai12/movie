<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_4"
    android:padding="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_height="@dimen/dp_90">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:id="@+id/image_model"
            android:layout_margin="@dimen/dp_10"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10" android:orientation="vertical"
                android:layout_marginEnd="@dimen/sp_20" android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/sp_20"
                >
                <TextView
                    android:id="@+id/title_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="CGV影院内"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:maxLines="1"
                    />

                <TextView
                    android:id="@+id/name_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="海淀区越秀路99号二层"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:maxLines="1"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/price_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="3.2km"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#333333"
                        android:maxLines="1"
                        />
                    <CheckBox
                        android:id="@+id/tuijian_checkbox"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:button="@drawable/four"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        />
                </RelativeLayout>
            </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

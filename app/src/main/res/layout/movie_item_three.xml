<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/movie_item_three_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄帅"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginStart="@dimen/dp_10" android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/movie_item_three_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10" android:layout_marginTop="@dimen/dp_40"
                    android:text="黄帅"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_15"
                    />
                <TextView
                    android:id="@+id/movie_item_three_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_60" android:layout_marginTop="@dimen/dp_40"
                    android:text="黄帅"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:layout_marginBottom="@dimen/dp_15"
                    />
                    <TextView
                        android:id="@+id/movie_item_three_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="¥53.9"
                        android:textSize="@dimen/sp_25"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_30" android:layout_alignParentEnd="true" android:gravity="center"
                        />

                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:contentDescription="TODO" android:src="@mipmap/abc"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                            />
        </RelativeLayout>
</android.support.v7.widget.CardView>
